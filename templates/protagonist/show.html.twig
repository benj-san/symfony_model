{% extends 'base.html.twig' %}

{% block title %}Protagonist{% endblock %}

{% block body %}
    <h1>Protagonist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ protagonist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ protagonist.name }}</td>
            </tr>
            <tr>
                <th>JapaneseName</th>
                <td>{{ protagonist.japaneseName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ protagonist.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ protagonist.picture }}</td>
            </tr>
            <tr>
                <th>Background</th>
                <td>{{ protagonist.background }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ protagonist.updatedAt ? protagonist.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsAlive</th>
                <td>{{ protagonist.isAlive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('protagonist_index') }}">back to list</a>

    <a href="{{ path('protagonist_edit', {'id': protagonist.id}) }}">edit</a>

    {{ include('protagonist/_delete_form.html.twig') }}
{% endblock %}
